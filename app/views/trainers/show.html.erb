<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer == current_trainer %>
<%= button_to "Create New Pokemon", new_pokemon_path(id: current_trainer.id), :class => "button medium", :method => :get%>
<% end %>


<p>Pokemons:</p>
<div> <% @pokemons.each do |p| %>
    <% if p.health > 0 %>
      <h3><div> <%= p.name %> </div></h3>
      
      <div> Health: <%= p.health %> </div>

      <%= button_to "Damage!", pokemons_path(id: p), :class => "button medium", :method => :get%>

      <%= button_to "Heal", heal_path(id: p), :class => "button medium", :method => :patch %>
    <% end %>
    <% end %>
