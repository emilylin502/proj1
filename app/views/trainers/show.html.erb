<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= button_to "Create New Pokemon", new_pokemon_path(id: current_trainer.id), :class => "button medium", :method => :get%>

<div>Pokemons:</div>


<% @pokemons.each do |pokemon| %>
	<% if pokemon.trainer_id == @trainer.id %>

	  <tr>
	  	<% @pokemon = pokemon %>
	  	<table>
	    <th><%= pokemon.name %></th>
	    <th><%= pokemon.level %></th>
	    <th><%= pokemon.health %></th>
	    </table>
	    <td><%= button_to "Damage", damage_path(id: @pokemon), :class => "button medium", :method => :patch %></td>
	    <td><%= button_to "Heal", heal_path(id: @pokemon.id), :class => "button medium", :method => :patch %> </td>
	  </tr>
	<% end %>
<% end %>

